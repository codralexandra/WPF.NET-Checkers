<Window x:Class="WpfApp1Tema2___Checkers__New_.Views.FileWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1Tema2___Checkers__New_.Views"
        mc:Ignorable="d"
        Title="FileWindowView" Height="350" Width="400">
    <Grid>
        <StackPanel Name="ButtonsContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="10" FontWeight="Bold" Click="newGameButton_Click">NEW GAME</Button>
            <Button Margin="10" FontWeight="Bold">OPEN GAME</Button>
            <CheckBox Margin="10" FontWeight="Bold">Allow multiple jump</CheckBox>
            <Button Margin="10" FontWeight="Bold">STATISTICS</Button>
            <Button Margin="10" FontWeight="Bold">EXIT</Button>
        </StackPanel>
    </Grid>
</Window>
