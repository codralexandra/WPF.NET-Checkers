<Window x:Class="WpfApp1Tema2___Checkers__New_.Views.GameWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1Tema2___Checkers__New_.Views"
        xmlns:ctx="clr-namespace:WpfApp1Tema2___Checkers__New_.View_Models"
        mc:Ignorable="d"
        Title="GameWindowView" Height="450" Width="800">
    <Window.DataContext>
        <ctx:GameWindowViewModel></ctx:GameWindowViewModel>
    </Window.DataContext>
    <Grid>
        <WrapPanel>
            <Border Name="GameBoard" Width="400" Height="400" Margin="20"></Border>
            <StackPanel Width="300">
                <Label>Player to move:</Label>
                <Label>Score:</Label>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
